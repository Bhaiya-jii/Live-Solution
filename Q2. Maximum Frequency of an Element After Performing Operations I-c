#include <vector>
#include <algorithm>
#include <iostream>

class Solution {
public:
    int maxFrequency(std::vector<int>& nums, int k, int numOperations) {
        // Find the maximum number in the array
        int max_num = *std::max_element(nums.begin(), nums.end());
        
        // Calculate the size of the frequency vector
        int size = max_num + k + 2;
        
        // Initialize frequency array
        std::vector<int> freq(size, 0);
        
        // Count the frequency of each number in nums
        for (int num : nums) {
            freq[num] += 1;
        }
        
        // Initialize prefix sum array
        std::vector<int> pre(size, 0);
        
        // Calculate the prefix sum for frequency array
        pre[0] = freq[0];
        for (int i = 1; i < size; ++i) {
            pre[i] = pre[i - 1] + freq[i];
        }
        
        int result = 0;
        
        // Iterate through the possible values of x
        for (int x = 0; x < size; ++x) {
            // Check if we can make operations to adjust the frequency
            if (freq[x] == 0 && numOperations == 0) {
                continue; // Skip if no operations left and no frequency to adjust
            }

            // Calculate the left and right indices for the range
            int left = std::max(0, x - k);
            int right = std::min(size - 1, x + k);
            
            // Calculate the total frequency in the range [left, right]
            int totalInRange = pre[right] - (left > 0 ? pre[left - 1] : 0);
            
            // Calculate how many operations we can perform
            int canAdjust = totalInRange - freq[x];
            
            // Calculate the total frequency we can achieve by adjusting with available operations
            int total = freq[x] + std::min(numOperations, canAdjust);
            
            // Update the result to the maximum frequency found
            result = std::max(result, total);
        }
        
        return result;
    }
};

