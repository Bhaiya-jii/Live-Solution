class Solution {
public:
    int smallestNumber(int n, int t) {
        int x = n;

        // Helper function to calculate the product of digits of a number
        auto productOfDigits = [](int num) -> int {
            int product = 1;
            while (num > 0) {
                int digit = num % 10;
                product *= digit;
                num /= 10;
            }
            return product;
        };

        // Find the smallest number greater than or equal to n with the required condition
        while (true) {
            if (productOfDigits(x) % t == 0) {
                return x;
            }
            x++;
        }
    }
};
