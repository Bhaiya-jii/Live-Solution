#include <string>
using namespace std;

class Solution {
public:
    int possibleStringCount(string word) {
        int totalCount = 1;  // Start with the original word itself as one possibility
        int n = word.size();
        
        for (int i = 0; i < n;) {
            int j = i;
            
            // Find the length of the current consecutive character sequence
            while (j < n && word[j] == word[i]) {
                j++;
            }
            
            // Length of the consecutive sequence
            int length = j - i;
            
            // If length > 1, add possible shorter versions (Alice could have intended a shorter length)
            if (length > 1) {
                totalCount += length - 1;
            }
            
            // Move to the next character sequence
            i = j;
        }
        
        return totalCount;
    }
};
